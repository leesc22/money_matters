<div>
	<%= form_with model: @article, local: true do |form| %>
		<div class="form-group row">
			<%= form.label :title, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%= form.text_field :title, required: true, class: 'form-control' %>
			</div>
		</div>

		<div class="form-group row">
			<%= form.label :content, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%= form.text_area :content, rows: 15, required: true, class: 'form-control' %>
			</div>
		</div>

		<div class="row">
			<%= form.submit 'Create Article', class: 'btn btn-primary mx-auto' %>
		</div>
	<% end %>	
</div>
