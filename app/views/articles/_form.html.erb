<div>
	<%= form_with model: @article, local: true do |form| %>
		<div>
			<%= form.label :title, class: '' %>
			<%= form.text_field :title, required: true, class: '' %>
		</div>

		<div>
			<%= form.label :content, class: '' %>
			<%= form.text_area :content, required: true, class: '' %>
		</div>

		<div>
			<%= form.submit %>
		</div>
	<% end %>	
</div>
