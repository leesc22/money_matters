<div class="modal" id="modal-sign-up" tabindex="-1" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="card card-sign-up mx-auto my-5">
				<div class="card-body">
					<h1 class="card-title">Sign Up</h1>

					<%= form_with model: @user, local: true do |form| %>
						<div class="form-group">
							<%= form.text_field :name, placeholder: 'Name', required: true, class: 'form-control' %>
						</div>
						<div class="form-group">
							<%= form.text_field :email, type: 'email', placeholder: 'Email', required: true, class: 'form-control' %>
						</div>
						<div class="form-group">
							<%= form.password_field :password, placeholder: 'Password', required: true, class: 'form-control' %>
							<small class="text-muted">
								Your password must be 8 characters long.
							</small>
						</div>
						<div class="form-group">
							<%= form.password_field :password_confirmation, placeholder: 'Confirm password', required: true, class: 'form-control' %>
						</div>
						<div class="row no-gutters">
							<div class="col mr-1">
								<%= link_to 'SIGN IN', sign_in_path, class: 'btn btn-secondary btn-block text-dark', data: { toggle: 'modal', target: '#modal-sign-in' }, remote: true %>
							</div>
							<div class="col ml-1">
								<%= form.submit 'SIGN UP', class: 'btn btn-primary btn-block' %>
							</div>
						</div>
						<div class="mt-2">
							<%= link_to 'Continue with Facebook', "/auth/facebook", class: 'btn btn-facebook btn-block' %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>