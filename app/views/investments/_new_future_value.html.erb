<div class="card card-new-investment m-3" id="card-new-investment">
	<div class="card-body">
		<h1 class="card-title">Investment Calculator</h1>

		<%= form_with model: @investment, id: :new_investment do |form| %>
			<div class="form-group row">
				<%= form.label 'Initial Investment', class: 'col-sm-3 col-form-label' %>
				<div class="col-sm-9">
					<%= form.number_field :initial_amount, {value: '1000', min: 0, required: true, class:'form-control'}%>
				</div>
			</div>
			<div class="form-group row">
				<%= form.label 'Regular Investment', class: 'col-sm-3 col-md-3 col-form-label' %>
				<div class="col-sm-5 col-md-6">
					<%= form.number_field :regular_amount, {value: '200', min: 0, required: true, class:'form-control'}%>
				</div>
				<div class="col-sm-4 col-md-3">
					<%= form.select :regular_period, options_for_select(['Monthly', 'Quarterly', 'Half Yearly', 'Yearly'], 'Monthly'), {}, { class: 'form-control' } %>
				</div>
			</div>
			<div class="form-group row">
				<%= form.label 'Interest (%)', class: 'col-sm-3 col-form-label' %>
				<div class="col-sm-9">
					<%= form.number_field :interest_rate, {value: '6', min: 0, required: true, class:'form-control'}%>
				</div>
				<%#= form.select :interest_rate_period, options_for_select(['Yearly', 'Half Yearly', 'Quarterly', 'Monthly'], 'Yearly'), {}, { class: '' } %>
			</div>
			<div class="form-group row">
				<%= form.label :period, class: 'col-sm-3 col-form-label' %>
				<div class="col-sm-7">
					<%= form.number_field :period, {value: '10', min: 1, required: true, class:'form-control'}%>
				</div>
				<div class="col-sm-2">
					years
				</div>
				<%#= form.select :period_type, options_for_select(['Years', 'Months'], 'Years'), {}, { class: '' } %>
			</div>
			<div>
				<%#= form.label 'Compounding' %>
				<%#= form.select :compounding_period, options_for_select(['Yearly', 'Half Yearly', 'Quarterly', 'Monthly'], 'Yearly'), {}, { class: '' } %>
			</div>
			<div class="row">
				<%= form.submit 'Calculate Future Value', class: 'btn btn-success mx-auto' %>
			</div>
		<% end %>
	</div>
</div>
