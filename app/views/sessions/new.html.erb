<div class="card card-sign-in mx-auto my-5">
	<div class="card-body">
		<h1 class="card-title">Sign In</h1>

		<%= form_with url: sign_in_path , local: true do |form| %>
			<div class="form-group">
				<%= form.text_field :email, type: 'email', placeholder: 'Email', required: true, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= form.password_field :password, placeholder: 'Password', required: true, class: 'form-control' %>
			</div>
			<div class="row no-gutters">
				<div class="col mr-1">
					<%= link_to 'SIGN UP', sign_up_path, class: 'btn btn-secondary btn-block text-dark' %>
				</div>
				<div class="col ml-1">
					<%= form.submit 'SIGN IN', class: 'btn btn-primary btn-block' %>
				</div>
			</div>
			<div class="mt-2">
				<%= link_to 'Continue with Facebook', "/auth/facebook", class: 'btn btn-facebook btn-block' %>
			</div>
		<% end %>
	</div>
</div>
