<div class="container-fluid p-0">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <span class="font-weight-bold">MONEY MATTERS</span>
    <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">

      <%= form_with url: articles_path, method: :get, local: true, class: 'form-inline my-2 my-lg-0' do |form| %>
        <div class="input-group">
          <%= form.text_field :search, placeholder: 'Search for articles', required: true, class: 'form-control ml-sm-2', id: 'search' %>
            <%= form.submit 'Search', class: 'btn btn-outline-light my-2 my-sm-0' %>
          
        </div>
      <% end %>

      <div class="navbar-nav ml-auto">
        <%= link_to 'CALCULATOR', new_investment_path, class: 'nav-item nav-link font-weight-bold' %>
        <%= link_to 'ARTICLES', articles_path, class: 'nav-item nav-link font-weight-bold' %>
        <% if current_user  %>
          <%= link_to 'PROFILE', user_path(current_user), class: 'nav-item nav-link font-weight-bold' %>
        <% else %>
          <%= link_to 'SIGN IN', sign_in_path, class: 'nav-item nav-link font-weight-bold', data: { toggle: 'modal', target: '#modal-sign-in' }, remote: true %>
        <% end %>
      </div>
    </div>
  </nav>
</div>